{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src",
  "testEnvironment": "node",
  "testRegex": ".int-spec.ts$",
  "testTimeout": 30000,
  "forceExit": true,
  "detectOpenHandles": false,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(@faker-js|typeorm-extension)/)"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "setupFiles": ["<rootDir>/../test/db-setup.ts"],
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "cobertura"
  ]
}